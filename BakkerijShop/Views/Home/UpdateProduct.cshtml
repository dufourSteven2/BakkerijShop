@model Product

<h3 class="p-2 bg-primary text-white text-center">Update Product</h3>

<form asp-action="UpdateProduct" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Naam"></label>
        <input asp-for="Naam" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Categorie"></label>
        <select class="form-control" asp-for="CategorieId">
            @if (Model.Id == 0)
            {
                <option disabled selected>Choose Category</option>
            }
            @foreach (Categorie c in ViewBag.Categories)
            {
                <option selected=@(Model.Categorie?.Id == c.Id)
                        value="@c.Id">
                    @c.Naam
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Prijs"></label>
        <input asp-for="Prijs" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>